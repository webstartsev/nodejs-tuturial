<h1>Корзина</h1>

<div id="card">
  {{#if courses.length}}
  <table>
    <thead>
      <tr>
        <td>Название</td>
        <td>Количество</td>
        <td>Дествие</td>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td><button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

  <form action="/orders" method="POST">
    <button type="submit" class="btn">Сделать зака</button>
  </form>
  {{else}}
  <p>Корзина пуста</p>
  {{/if}}
</div>